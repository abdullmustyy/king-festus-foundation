generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  fullName  String?
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MediaAsset {
  id        String         @id @default(uuid())
  key       String         @unique
  name      String
  url       String
  type      MediaAssetType
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  landingPages     LandingPage[]
  governanceBodies GovernanceBody[]
  dashboardAds     DashboardAd[]
  media            Media?
}

model Media {
  id           String     @id @default(uuid())
  description  String?
  mediaAssetId String     @unique
  mediaAsset   MediaAsset @relation(fields: [mediaAssetId], references: [id])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model LandingPage {
  id               String     @id @default(uuid())
  heroMediaAssetId String
  heroMediaAsset   MediaAsset @relation(fields: [heroMediaAssetId], references: [id])
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}

model AboutUs {
  id        String    @id @default(uuid())
  vision    String
  missions  Mission[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Mission {
  id        String  @id @default(uuid())
  text      String
  aboutUs   AboutUs @relation(fields: [aboutUsId], references: [id], onDelete: Cascade)
  aboutUsId String
}

model GovernanceBody {
  id           String     @id @default(uuid())
  mediaAssetId String
  mediaAsset   MediaAsset @relation(fields: [mediaAssetId], references: [id])
  name         String
  role         String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model BreakingNews {
  id        String   @id @default(uuid())
  headline  String
  linkUrl   String?
  startDate DateTime
  endDate   DateTime
  status    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DashboardAd {
  id           String     @id @default(uuid())
  title        String
  mediaAssetId String
  mediaAsset   MediaAsset @relation(fields: [mediaAssetId], references: [id])
  status       Boolean    @default(false)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

enum UserRole {
  ADMIN
  USER
}

enum MediaAssetType {
  IMAGE
  VIDEO
}
