generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  fullName  String?
  password  String?
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id        String   @id @default(uuid())
  key       String   @unique
  name      String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  landingPages     LandingPage[]
  governanceBodies GovernanceBody[]
  dashboardAds     DashboardAd[]
  media            Media?
}

model Media {
  id          String   @id @default(uuid())
  description String?
  imageId     String   @unique
  image       Image    @relation(fields: [imageId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model LandingPage {
  id          String   @id @default(uuid())
  heroImageId String
  heroImage   Image    @relation(fields: [heroImageId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AboutUs {
  id        String    @id @default(uuid())
  vision    String
  missions  Mission[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Mission {
  id        String  @id @default(uuid())
  text      String
  aboutUs   AboutUs @relation(fields: [aboutUsId], references: [id], onDelete: Cascade)
  aboutUsId String
}

model GovernanceBody {
  id        String   @id @default(uuid())
  imageId   String
  image     Image    @relation(fields: [imageId], references: [id])
  name      String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BreakingNews {
  id        String   @id @default(uuid())
  headline  String
  linkUrl   String
  startDate DateTime
  endDate   DateTime
  status    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DashboardAd {
  id        String   @id @default(uuid())
  title     String
  imageId   String
  image     Image    @relation(fields: [imageId], references: [id])
  status    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  USER
}
